---
/**
 * Header - 站点顶部导航组件
 *
 * 功能:
 * - Logo + 品牌名
 * - 主导航菜单 (Desktop + Mobile)
 * - Shop All 分类下拉菜单
 * - 购物车图标 + 数量徽章
 * - 响应式移动菜单
 *
 * @see CLAUDE.md Section 6.2 (Header 组件)
 */

import { siteSettings } from '@/config/site-settings';
import { categories } from '@/config/categories';
import CartIcon from '@/components/commerce/CartIcon';
import AuthButton from '@/components/auth/AuthButton';

// 主导航链接
const navItems = [
  { label: 'Home', href: '/' },
  { label: 'Shop All', href: '/shop/', hasDropdown: true },
  { label: 'New In', href: '/new-in/' },
  { label: 'Gallery', href: '/gallery/' },
  { label: 'Blog', href: '/blog/' },
  { label: 'About', href: '/about/' },
  { label: 'Contact', href: '/contact/' },
];

// 当前页面路径（用于高亮当前导航）
const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white border-b border-gray-200 shadow-sm">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-20">

      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <!-- Logo Icon (可替换为实际 logo 图片) -->
        <div class="w-10 h-10 bg-brand rounded-full flex items-center justify-center transition-transform group-hover:scale-110">
          <span class="text-white font-serif text-xl font-bold">D</span>
        </div>
        <div class="flex flex-col">
          <span class="font-serif text-xl font-bold text-brand-dark tracking-wide">
            {siteSettings.siteName}
          </span>
          <span class="text-xs text-gray-500 hidden md:block">
            {siteSettings.tagline}
          </span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-8">
        {navItems.map((item) => (
          <div class="relative group">
            <a
              href={item.href}
              class={`
                font-medium text-sm tracking-wide transition-colors duration-200
                ${currentPath === item.href
                  ? 'text-brand'
                  : 'text-gray-700 hover:text-brand'
                }
              `}
            >
              {item.label}
              {item.hasDropdown && (
                <svg class="inline-block ml-1 w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              )}
            </a>

            <!-- Categories Dropdown (仅 Shop All) -->
            {item.hasDropdown && (
              <div class="absolute top-full left-0 mt-2 w-64 bg-white border border-gray-200 rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                <div class="p-4">
                  <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">
                    Shop by Category
                  </p>
                  <ul class="space-y-2">
                    {categories.map((category) => (
                      <li>
                        <a
                          href={`/shop/${category.slug}/`}
                          class="flex items-center justify-between py-2 px-3 rounded-md hover:bg-brand-light transition-colors group/item"
                        >
                          <span class="text-sm text-gray-700 group-hover/item:text-brand-dark">
                            {category.name}
                          </span>
                          {category.badge && (
                            <span class="text-xs px-2 py-0.5 bg-brand text-white rounded-full">
                              {category.badge}
                            </span>
                          )}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            )}
          </div>
        ))}
      </nav>

      <!-- Header Actions -->
      <div class="flex items-center gap-4">

        <!-- Search Icon (可选) -->
        <button
          class="hidden md:block p-2 text-gray-600 hover:text-brand transition-colors"
          aria-label="Search"
          id="search-toggle"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>

        <!-- Account Icon (React Island) -->
        <AuthButton client:load />

        <!-- Cart Icon (React Island) -->
        <CartIcon client:idle />

        <!-- Mobile Menu Toggle -->
        <button
          class="lg:hidden p-2 text-gray-700 hover:text-brand transition-colors"
          id="mobile-menu-toggle"
          aria-label="Toggle Menu"
        >
          <svg class="w-6 h-6 menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg class="w-6 h-6 close-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

    </div>
  </div>

  <!-- Mobile Navigation -->
  <div
    class="lg:hidden hidden bg-white border-t border-gray-200"
    id="mobile-menu"
  >
    <nav class="container mx-auto px-4 py-4">
      <ul class="space-y-1">
        {navItems.map((item) => (
          <li>
            {item.hasDropdown ? (
              <div>
                <!-- Shop All with Categories -->
                <button
                  class="w-full flex items-center justify-between py-3 px-4 text-gray-700 hover:bg-brand-light rounded-md transition-colors mobile-dropdown-toggle"
                  data-target="mobile-categories"
                >
                  <span class="font-medium">{item.label}</span>
                  <svg class="w-5 h-5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>

                <!-- Categories Submenu -->
                <ul class="hidden pl-4 mt-2 space-y-1" id="mobile-categories">
                  {categories.map((category) => (
                    <li>
                      <a
                        href={`/shop/${category.slug}/`}
                        class="flex items-center justify-between py-2 px-4 text-sm text-gray-600 hover:bg-brand-light hover:text-brand-dark rounded-md transition-colors"
                      >
                        <span>{category.name}</span>
                        {category.badge && (
                          <span class="text-xs px-2 py-0.5 bg-brand text-white rounded-full">
                            {category.badge}
                          </span>
                        )}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ) : (
              <a
                href={item.href}
                class={`
                  block py-3 px-4 rounded-md transition-colors font-medium
                  ${currentPath === item.href
                    ? 'bg-brand text-white'
                    : 'text-gray-700 hover:bg-brand-light'
                  }
                `}
              >
                {item.label}
              </a>
            )}
          </li>
        ))}
      </ul>

      <!-- Mobile Account Link -->
      <div class="mt-4 pt-4 border-t border-gray-200">
        <a
          href="/auth/login/"
          class="flex items-center gap-3 py-3 px-4 text-gray-700 hover:bg-brand-light rounded-md transition-colors font-medium"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
            <circle cx="12" cy="7" r="4" />
          </svg>
          My Account
        </a>
      </div>

      <!-- Mobile Social Links -->
      <div class="mt-6 pt-6 border-t border-gray-200">
        <p class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-3">
          Follow Us
        </p>
        <div class="flex gap-4">
          <a
            href={siteSettings.social.instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 text-gray-600 hover:text-brand transition-colors"
            aria-label="Instagram"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a
            href={siteSettings.social.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 text-gray-600 hover:text-brand transition-colors"
            aria-label="Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a
            href={siteSettings.social.pinterest}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 text-gray-600 hover:text-brand transition-colors"
            aria-label="Pinterest"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm0 19c-.721 0-1.418-.109-2.073-.312.286-.465.713-1.227.87-1.835l.437-1.664c.229.436.895.804 1.604.804 2.111 0 3.633-1.941 3.633-4.354 0-2.312-1.888-4.042-4.316-4.042-3.021 0-4.625 2.003-4.625 4.13 0 1.095.476 2.113 1.5 2.481.151.056.232.029.268-.082.027-.084.167-.678.232-.938.021-.08.011-.146-.054-.219-.373-.458-.648-1.301-.648-2.085 0-2.014 1.521-3.982 4.117-3.982 2.245 0 3.82 1.508 3.82 3.682 0 2.476-1.244 4.195-2.861 4.195-.917 0-1.603-.751-1.382-1.674.263-.998.771-2.074.771-2.792 0-.644-.346-1.182-1.064-1.182-.843 0-1.521.871-1.521 2.037 0 .743.252 1.246.252 1.246l-1.025 4.33c-.287 1.211-.051 2.925-.016 3.086.021.094.133.117.189.046.079-.1 1.093-1.395 1.427-2.574.097-.343.556-2.171.556-2.171.296.558 1.166 1.028 2.088 1.028 2.748 0 4.756-2.502 4.756-5.633 0-2.983-2.475-5.119-5.656-5.119-4.064 0-6.289 2.766-6.289 5.879 0 1.396.534 2.938 1.681 3.459.173.08.265.044.305-.118.032-.129.168-.691.231-.952.022-.095.011-.176-.066-.267-.511-.597-.913-1.678-.913-2.691 0-2.602 1.981-5.116 5.344-5.116 2.916 0 5.062 1.963 5.062 4.916-.001 3.128-1.785 5.299-4.067 5.299z"/>
            </svg>
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>

<!-- Spacer to prevent content from hiding under fixed header -->
<div class="h-20" aria-hidden="true"></div>

<script>
  // Mobile menu toggle
  const mobileToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = mobileToggle?.querySelector('.menu-icon');
  const closeIcon = mobileToggle?.querySelector('.close-icon');

  mobileToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });

  // Mobile dropdown toggles
  const dropdownToggles = document.querySelectorAll('.mobile-dropdown-toggle');
  dropdownToggles.forEach((toggle) => {
    toggle.addEventListener('click', (e) => {
      const target = (e.currentTarget as HTMLElement).dataset.target;
      const submenu = document.getElementById(target!);
      const arrow = toggle.querySelector('svg');

      submenu?.classList.toggle('hidden');
      arrow?.classList.toggle('rotate-180');
    });
  });

  // Close mobile menu when clicking a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach((link) => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    });
  });

  // Close mobile menu on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !mobileMenu?.classList.contains('hidden')) {
      mobileMenu?.classList.add('hidden');
      menuIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    }
  });
</script>

<style>
  /* Smooth transitions for dropdown */
  .group:hover .group-hover\:opacity-100 {
    transition-delay: 0.15s;
  }
</style>
