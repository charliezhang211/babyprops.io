---
// ProductFAQ - Accordion FAQ Component for PDP
import { siteSettings } from "@/config/site-settings";
interface FAQItem {
    question: string;
    answer: string;
}

interface Props {
    faqs?: FAQItem[];
    productName?: string;
}

const { productName = "Tire Lettering Kit" } = Astro.props;

// Default FAQs if none provided
const defaultFaqs: FAQItem[] = [
    {
        question: "How long does installation take?",
        answer: "The average DIY installation takes 30-45 minutes per tire. For best results, we recommend professional installation at your local tire shop.",
    },
    {
        question: "Will the lettering damage my tires?",
        answer: "No! Our raised rubber letters are designed to be safe for all tire types. The adhesive is specifically formulated to bond without damaging the tire surface.",
    },
    {
        question: "How long do the letters last?",
        answer: "With proper installation, our tire letters typically last 1-2 years or around 30,000 miles, depending on driving conditions and tire care.",
    },
    {
        question: "Are these compatible with my tires?",
        answer: 'Our kits are designed to fit most tire sizes from 15" to 22". Check the compatibility section for specific tire models.',
    },
    {
        question: "What's included in the kit?",
        answer: "Each kit includes 4x tire lettering sets, professional adhesive glue, cleaning prep kit, and a detailed installation guide.",
    },
    {
        question: "Do you offer international shipping?",
        answer: "Yes! We ship worldwide from our factory in Shenzhen, China. Standard shipping is free for orders over $50.",
    },
];

const faqs = Astro.props.faqs || defaultFaqs;
---

<div class="faq-section">
    <h3 class="faq-title">Frequently Asked Questions</h3>
    <div class="faq-list">
        {
            faqs.map((faq, index) => (
                <details class="faq-item" open={index === 0}>
                    <summary class="faq-question">
                        <span>{faq.question}</span>
                        <svg
                            class="faq-icon"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <polyline points="6 9 12 15 18 9" />
                        </svg>
                    </summary>
                    <div class="faq-answer">
                        <p>{faq.answer}</p>
                    </div>
                </details>
            ))
        }
    </div>

    <div class="faq-contact">
        <p>Still have questions?</p>
        <a
            href={siteSettings.contact.whatsappUrl}
            class="faq-contact-btn"
            target="_blank"
            rel="noopener noreferrer"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="currentColor"
            >
                <path
                    d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                ></path>
            </svg>
            Chat with us
        </a>
    </div>
</div>

<style>
    .faq-section {
        background: var(--carbon-gray);
        border-radius: var(--radius-lg);
        padding: var(--space-6);
        position: sticky;
        top: 100px;
    }

    .faq-title {
        font-family: var(--font-heading);
        font-size: var(--text-lg);
        text-transform: uppercase;
        margin-bottom: var(--space-4);
        color: var(--pure-white);
    }

    .faq-list {
        display: flex;
        flex-direction: column;
        gap: var(--space-2);
    }

    .faq-item {
        border: 1px solid var(--asphalt);
        border-radius: var(--radius-md);
        overflow: hidden;
    }

    .faq-question {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: var(--space-3) var(--space-4);
        background: var(--tire-black);
        cursor: pointer;
        font-size: var(--text-sm);
        color: var(--pure-white);
        list-style: none;
    }

    .faq-question::-webkit-details-marker {
        display: none;
    }

    .faq-question span {
        flex: 1;
        padding-right: var(--space-2);
    }

    .faq-icon {
        width: 16px;
        height: 16px;
        color: var(--chrome);
        transition: transform var(--transition-fast);
        flex-shrink: 0;
    }

    .faq-item[open] .faq-icon {
        transform: rotate(180deg);
    }

    .faq-answer {
        padding: var(--space-3) var(--space-4);
        background: var(--tire-black);
        border-top: 1px solid var(--asphalt);
    }

    .faq-answer p {
        font-size: var(--text-sm);
        color: var(--silver);
        line-height: 1.6;
        margin: 0;
    }

    .faq-contact {
        margin-top: var(--space-5);
        padding-top: var(--space-4);
        border-top: 1px solid var(--asphalt);
        text-align: center;
    }

    .faq-contact p {
        font-size: var(--text-sm);
        color: var(--chrome);
        margin-bottom: var(--space-3);
    }

    .faq-contact-btn {
        display: inline-flex;
        align-items: center;
        gap: var(--space-2);
        padding: var(--space-2) var(--space-4);
        background: #25d366;
        border-radius: var(--radius-md);
        color: var(--pure-white);
        font-size: var(--text-sm);
        font-weight: 600;
        text-decoration: none;
        transition: all var(--transition-fast);
    }

    .faq-contact-btn:hover {
        background: #128c7e;
    }

    @media (max-width: 1024px) {
        .faq-section {
            position: static;
            margin: 0;
            border-radius: 0;
            padding: var(--space-4);
        }
    }

    @media (max-width: 768px) {
        .faq-section {
            padding: var(--space-4);
            margin-left: calc(-1 * var(--space-4));
            margin-right: calc(-1 * var(--space-4));
            width: calc(100% + var(--space-8));
        }

        .faq-title {
            font-size: var(--text-base);
        }

        .faq-question {
            padding: var(--space-2) var(--space-3);
            font-size: var(--text-xs);
        }

        .faq-answer {
            padding: var(--space-2) var(--space-3);
        }

        .faq-answer p {
            font-size: var(--text-xs);
        }
    }
</style>
