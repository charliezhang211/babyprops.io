---
// TrustBadges Component - Static server-rendered badges
// Reads badge config from siteSettings when available, falls back to defaults
import Icon from "@/components/common/Icon.astro";
import { siteSettings } from "@/config/site-settings";

const badges = [
    { icon: "factory", label: "Factory Direct", sublabel: "No Middleman" },
    { icon: "truck", label: "Free Shipping", sublabel: "Worldwide" },
    { icon: "shield", label: "Warranty", sublabel: "30-Day Returns" },
    { icon: "checkCircle", label: "In Stock", sublabel: "Ships in 24h" },
] as const;
---

<div
    class="grid grid-cols-2 gap-3 mt-6 pt-6 border-t border-slate-700/50 md:grid-cols-4 max-md:gap-2 max-md:mt-4 max-md:pt-4"
    data-pdp="trust-badges"
>
    {
        badges.map((badge) => (
            <div class="flex items-center gap-2 max-md:flex-col max-md:text-center max-md:gap-1">
                <Icon
                    name={badge.icon as any}
                    size={24}
                    class="text-brand flex-shrink-0 max-md:w-5 max-md:h-5"
                />
                <div class="flex flex-col">
                    <span class="text-sm font-semibold text-white max-md:text-xs">
                        {badge.label}
                    </span>
                    <span class="text-xs text-slate-400 max-md:hidden">
                        {badge.sublabel}
                    </span>
                </div>
            </div>
        ))
    }
</div>
