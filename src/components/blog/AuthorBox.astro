---
/**
 * AuthorBox - 作者信息组件
 *
 * 功能:
 * - 显示作者头像、名称、简介
 * - 社交链接 (Instagram/Pinterest)
 * - 上下垂直布局 (头像在上)
 *
 * @see TASKS-BLOG.md Task-B.4
 */

import { authors } from "@/config/authors";

interface Props {
    authorId: keyof typeof authors;
}

const { authorId } = Astro.props;
const author = authors[authorId];
const authorInitial = author.name.charAt(0);
---

<div
    class="author-box bg-white rounded-2xl p-6 border border-gray-200 shadow-sm"
>
    <div class="flex flex-col items-center text-center">
        <!-- Avatar -->
        <div class="mb-4">
            <div
                class="w-24 h-24 rounded-full overflow-hidden bg-brand/20 ring-2 ring-brand/30 flex items-center justify-center"
            >
                <img
                    src={author.avatar}
                    alt={author.name}
                    class="w-full h-full object-cover author-avatar"
                    loading="lazy"
                />
                <span
                    class="author-initial hidden text-brand-dark text-2xl font-serif"
                    >{authorInitial}</span
                >
            </div>
        </div>

        <!-- Info -->
        <div>
            <p class="text-sm text-gray-500 font-medium mb-1">Written by</p>
            <h4 class="text-lg font-serif text-gray-900 font-semibold mb-2">
                {author.name}
            </h4>
            <p class="text-sm text-gray-600 leading-relaxed mb-4">
                {author.bio}
            </p>

            <!-- Social Links -->
            <div class="flex items-center justify-center gap-4">
                {
                    author.social.instagram && (
                        <a
                            href={author.social.instagram}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-gray-500 hover:text-brand transition-colors"
                            aria-label="Follow on Instagram"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                            </svg>
                        </a>
                    )
                }
                {
                    author.social.pinterest && (
                        <a
                            href={author.social.pinterest}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-gray-500 hover:text-brand transition-colors"
                            aria-label="Follow on Pinterest"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z" />
                            </svg>
                        </a>
                    )
                }
            </div>
        </div>
    </div>
</div>

<style>
    .author-avatar:not([src]),
    .author-avatar[src=""],
    .author-avatar.error {
        display: none;
    }

    .author-avatar:not([src]) + .author-initial,
    .author-avatar[src=""] + .author-initial,
    .author-avatar.error + .author-initial {
        display: block;
    }
</style>

<script>
    document.querySelectorAll(".author-avatar").forEach((img) => {
        img.addEventListener("error", () => {
            img.classList.add("error");
        });
    });
</script>
