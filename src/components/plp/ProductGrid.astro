---
// ğŸ“ src/components/plp/ProductGrid.astro
// äº§å“ç½‘æ ¼ç»„ä»¶ - å“åº”å¼å¸ƒå±€ + ç©ºçŠ¶æ€ + Loading

import ProductCard from './ProductCard.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  products: CollectionEntry<'products'>[];
  showQuickAdd?: boolean;
  loading?: boolean;
  columns?: '2' | '3' | '4';
  class?: string;
}

const {
  products = [],
  showQuickAdd = false,
  loading = false,
  columns = '4',
  class: className = '',
} = Astro.props;

// å“åº”å¼ç½‘æ ¼ç±»
const gridColumns = {
  '2': 'grid-cols-1 sm:grid-cols-2',
  '3': 'grid-cols-1 sm:grid-cols-2 lg:grid-cols-3',
  '4': 'grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4',
};

const gridClass = gridColumns[columns];

// æ˜¯å¦æœ‰äº§å“
const hasProducts = products.length > 0;
---

<div
  class:list={['product-grid', className]}
  data-component="product-grid"
  data-product-count={products.length}
>
  {/* Loading çŠ¶æ€ - å¯¼å…¥éª¨æ¶å±ç»„ä»¶ */}
  {loading && (
    <div class:list={['grid gap-6', gridClass]} data-loading="true">
      {Array.from({ length: 8 }).map(() => (
        <div class="animate-pulse">
          {/* å›¾ç‰‡éª¨æ¶ */}
          <div class="aspect-square bg-gray-200 rounded-lg mb-3"></div>
          {/* æ ‡é¢˜éª¨æ¶ */}
          <div class="h-4 bg-gray-200 rounded w-3/4 mb-2"></div>
          <div class="h-4 bg-gray-200 rounded w-1/2 mb-3"></div>
          {/* æ ‡ç­¾éª¨æ¶ */}
          <div class="flex gap-2 mb-3">
            <div class="h-5 bg-gray-200 rounded w-16"></div>
            <div class="h-5 bg-gray-200 rounded w-20"></div>
          </div>
          {/* ä»·æ ¼éª¨æ¶ */}
          <div class="h-6 bg-gray-200 rounded w-20"></div>
        </div>
      ))}
    </div>
  )}

  {/* ç©ºçŠ¶æ€ */}
  {!loading && !hasProducts && (
    <div
      class="empty-state text-center py-16 px-4"
      data-empty-state
    >
      <div class="max-w-md mx-auto">
        {/* ç©ºçŠ¶æ€å›¾æ ‡ */}
        <div class="mb-6">
          <svg
            class="w-24 h-24 mx-auto text-brand/30"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"
            />
          </svg>
        </div>

        {/* ç©ºçŠ¶æ€æ ‡é¢˜ */}
        <h3 class="text-2xl font-serif text-brand-dark mb-3">
          No Products Found
        </h3>

        {/* ç©ºçŠ¶æ€æè¿° */}
        <p class="text-gray-600 mb-6">
          We couldn't find any products matching your criteria. Try adjusting your filters or browse all products.
        </p>

        {/* CTA æŒ‰é’® */}
        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <a
            href="/shop"
            class="inline-flex items-center justify-center px-6 py-3 bg-brand text-white rounded-full hover:bg-brand-dark transition-colors font-medium"
          >
            Browse All Products
          </a>
          <button
            type="button"
            onclick="window.history.back()"
            class="inline-flex items-center justify-center px-6 py-3 border-2 border-brand text-brand rounded-full hover:bg-brand hover:text-white transition-colors font-medium"
          >
            Go Back
          </button>
        </div>
      </div>
    </div>
  )}

  {/* äº§å“ç½‘æ ¼ */}
  {!loading && hasProducts && (
    <div
      class:list={['grid gap-6', gridClass]}
      data-products="true"
    >
      {products.map((product, index) => (
        <ProductCard
          product={product}
          showQuickAdd={showQuickAdd}
          loading={index < 4 ? 'eager' : 'lazy'}
          prefetch="viewport"
        />
      ))}
    </div>
  )}
</div>

<style>
  /* ç½‘æ ¼åŠ¨ç”» - é€ä¸ªæ·¡å…¥ */
  .product-grid [data-products="true"] > * {
    animation: fadeInUp 0.4s ease-out backwards;
  }

  .product-grid [data-products="true"] > *:nth-child(1) { animation-delay: 0.05s; }
  .product-grid [data-products="true"] > *:nth-child(2) { animation-delay: 0.1s; }
  .product-grid [data-products="true"] > *:nth-child(3) { animation-delay: 0.15s; }
  .product-grid [data-products="true"] > *:nth-child(4) { animation-delay: 0.2s; }
  .product-grid [data-products="true"] > *:nth-child(5) { animation-delay: 0.25s; }
  .product-grid [data-products="true"] > *:nth-child(6) { animation-delay: 0.3s; }
  .product-grid [data-products="true"] > *:nth-child(7) { animation-delay: 0.35s; }
  .product-grid [data-products="true"] > *:nth-child(8) { animation-delay: 0.4s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* éª¨æ¶å±åŠ¨ç”» */
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
