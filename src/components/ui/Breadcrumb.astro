import { siteSettings } from '@/config/site-settings';

interface BreadcrumbItem {
  label: string;
  href: string;
}

interface Props {
  items: BreadcrumbItem[];
  class?: string;
}

const { items, class: className = '' } = Astro.props;

// æž„å»ºé¢åŒ…å±‘åˆ—è¡¨ (å§‹ç»ˆåŒ…å« Home)
const breadcrumbs: BreadcrumbItem[] = [
  { label: 'Home', href: '/' },
  ...items,
];

// æž„å»º Schema.org ç»“æž„åŒ–æ•°æ®
const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: breadcrumbs.map((item, index) => ({
    '@type': 'ListItem',
    position: index + 1,
    name: item.label,
    item: `${siteSettings.siteUrl}${item.href}`,
  })),
};
---

<nav
  aria-label="Breadcrumb"
  class={`text-sm ${className}`}
  data-component="breadcrumb"
>
  <ol class="flex items-center flex-wrap gap-2">
    {breadcrumbs.map((item, index) => {
      const isLast = index === breadcrumbs.length - 1;

      return (
        <li class="flex items-center gap-2">
          {!isLast ? (
            <>
              <a
                href={item.href}
                class="text-gray-600 hover:text-brand transition-colors"
              >
                {item.label}
              </a>
              <span class="text-gray-400" aria-hidden="true">/</span>
            </>
          ) : (
            <span class="text-brand-dark font-medium" aria-current="page">
              {item.label}
            </span>
          )}
        </li>
      );
    })}
  </ol>
</nav>

<!-- Schema.org ç»“æž„åŒ–æ•°æ® -->
<script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
