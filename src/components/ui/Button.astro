  primary: 'bg-brand text-white hover:bg-brand-dark focus:ring-brand',
  secondary: 'border-2 border-brand text-brand hover:bg-brand hover:text-white focus:ring-brand',
  outline: 'border border-gray-300 text-gray-700 hover:bg-gray-50 focus:ring-gray-400',
};

// å°ºå¯¸æ ·å¼
const sizeStyles = {
  sm: 'px-4 py-2 text-sm rounded-md',
  md: 'px-6 py-3 text-base rounded-full',
  lg: 'px-8 py-4 text-lg rounded-full',
};

// ç»„åˆæ ·å¼
const buttonClass = [
  baseStyles,
  variantStyles[variant],
  sizeStyles[size],
  fullWidth ? 'w-full' : '',
  className,
].join(' ');

// åŠ¨æ€æ¸²æŸ“ä¸º <a> æˆ– <button>
const Element = href ? 'a' : 'button';
const elementProps = href
  ? { href, disabled: disabled ? true : undefined }
  : { type, disabled };
