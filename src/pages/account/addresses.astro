---
/**
 * Address Manager Page
 * Manage shipping addresses with add/edit/delete/set-default
 */
import BaseLayout from '@/components/layout/BaseLayout.astro';
import AccountLayout from '@/components/account/AccountLayout.astro';
import Breadcrumb from '@/components/ui/Breadcrumb.astro';
import AddressManager from '@/components/account/AddressManager';
import { siteSettings } from '@/config/site-settings';
import { createServerSupabase } from '@/lib/supabase';

// Get user session
const supabase = createServerSupabase(Astro.cookies);
const { data: { user } } = await supabase.auth.getUser();

// Redirect to login if not authenticated
if (!user) {
  return Astro.redirect('/auth/login?redirect=/account/addresses/');
}

// Fetch user's addresses (default first, then by creation date)
const { data: addresses } = await supabase
  .from('addresses')
  .select('*')
  .eq('user_id', user.id)
  .order('is_default', { ascending: false })
  .order('created_at', { ascending: false });

const addressList = addresses || [];

// SEO Meta
const meta = {
  title: `My Addresses | ${siteSettings.siteName}`,
  description: 'Manage your shipping addresses.',
  noindex: true,
};

// Breadcrumb items
const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'My Account', href: '/account/' },
  { label: 'Addresses', href: '/account/addresses/' },
];
---

<BaseLayout {meta}>
  <div class="bg-brand-light min-h-screen py-8">
    <div class="container mx-auto px-4">
      <!-- Breadcrumb -->
      <Breadcrumb items={breadcrumbItems} />

      <!-- Account Layout with Sidebar -->
      <AccountLayout user={user} currentPage="addresses">
        <!-- Page Header -->
        <div class="account-section-header" style="margin-bottom: 1.5rem;">
          <h1 class="text-2xl font-serif text-brand-dark">My Addresses</h1>
          <p class="text-sm text-gray-500 mt-1">
            {addressList.length > 0
              ? `${addressList.length} saved address${addressList.length !== 1 ? 'es' : ''}`
              : 'No saved addresses yet'}
          </p>
        </div>

        <!-- Address Manager React Island -->
        <AddressManager
          client:load
          initialAddresses={addressList}
          userId={user.id}
        />

        <!-- Need Help Section -->
        <div class="account-help-card" style="margin-top: 2rem;">
          <div class="account-help-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
              <line x1="12" y1="17" x2="12.01" y2="17"/>
            </svg>
          </div>
          <div class="account-help-content">
            <h3 class="account-help-title">Need Help?</h3>
            <p class="account-help-description">
              Having trouble with your addresses? Our support team is here to help.
            </p>
          </div>
          <div class="account-help-actions">
            <a href={siteSettings.contact.whatsappUrl} target="_blank" rel="noopener noreferrer" class="account-help-btn whatsapp">
              <svg viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp
            </a>
            <a href={`mailto:${siteSettings.contact.email}`} class="account-help-btn email">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="w-5 h-5">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
              Email Us
            </a>
          </div>
        </div>
      </AccountLayout>
    </div>
  </div>
</BaseLayout>
