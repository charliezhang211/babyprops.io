---
/**
 * Account Dashboard Page
 * User's main account hub with quick links and recent orders
 */
import BaseLayout from '@/components/layout/BaseLayout.astro';
import AccountLayout from '@/components/account/AccountLayout.astro';
import Breadcrumb from '@/components/ui/Breadcrumb.astro';
import { siteSettings } from '@/config/site-settings';
import { createServerSupabase } from '@/lib/supabase';
import type { OrderItemRow } from '@/lib/supabase';

// Get user session
const supabase = createServerSupabase(Astro.cookies);
const { data: { user } } = await supabase.auth.getUser();

// Redirect to login if not authenticated
if (!user) {
  return Astro.redirect('/auth/login?redirect=/account/');
}

// Fetch all data in parallel
const [ordersResult, addressCountResult, orderCountResult] = await Promise.all([
  supabase
    .from('orders')
    .select('*')
    .eq('user_id', user.id)
    .order('created_at', { ascending: false })
    .limit(3),
  supabase
    .from('addresses')
    .select('*', { count: 'exact', head: true })
    .eq('user_id', user.id),
  supabase
    .from('orders')
    .select('*', { count: 'exact', head: true })
    .eq('user_id', user.id),
]);

const orders = ordersResult.data;
const addressCount = addressCountResult.count;
const orderCount = orderCountResult.count;

// Fetch order items (depends on orders result)
let orderItems: OrderItemRow[] = [];
if (orders && orders.length > 0) {
  const orderIds = orders.map(o => o.id);
  const { data: items } = await supabase
    .from('order_items')
    .select('*')
    .in('order_id', orderIds);
  orderItems = items || [];
}

// Get user info
const fullName = user.user_metadata?.full_name || user.email?.split('@')[0] || 'User';

// Helper function to get status badge color
function getStatusColor(status: string): string {
  const colors: Record<string, string> = {
    pending: 'bg-amber-100 text-amber-700',
    paid: 'bg-blue-100 text-blue-700',
    processing: 'bg-blue-100 text-blue-700',
    shipped: 'bg-purple-100 text-purple-700',
    delivered: 'bg-brand-accent/30 text-green-700',
    cancelled: 'bg-gray-100 text-gray-700',
    refunded: 'bg-red-100 text-red-700',
  };
  return colors[status] || 'bg-gray-100 text-gray-700';
}

// Helper function to format status
function formatStatus(status: string): string {
  return status.charAt(0).toUpperCase() + status.slice(1);
}

// Helper function to format date
function formatDate(dateString: string): string {
  return new Date(dateString).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}

// Helper function to format currency
function formatCurrency(amount: number): string {
  return new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
  }).format(amount);
}

// Get order items by order id
function getOrderItems(orderId: string): OrderItemRow[] {
  return orderItems.filter(item => item.order_id === orderId);
}

// SEO Meta
const meta = {
  title: `My Account | ${siteSettings.siteName}`,
  description: 'Manage your orders, addresses, and account settings.',
  noindex: true,
};

// Breadcrumb items
const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'My Account', href: '/account/' },
];
---

<BaseLayout {meta}>
  <div class="bg-brand-light min-h-screen py-8">
    <div class="container mx-auto px-4">
      <!-- Breadcrumb -->
      <Breadcrumb items={breadcrumbItems} />

      <!-- Account Layout with Sidebar -->
      <AccountLayout user={user} currentPage="dashboard">
        <!-- Welcome Section -->
        <div class="account-welcome">
          <h1 class="account-welcome-title">Welcome back, {fullName}!</h1>
          <p class="account-welcome-subtitle">Manage your orders, addresses, and account settings.</p>
        </div>

        <!-- Quick Links Grid -->
        <div class="account-quick-links">
          <!-- My Orders Card -->
          <a href="/account/orders/" class="account-quick-card">
            <div class="account-quick-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/>
                <rect x="8" y="2" width="8" height="4" rx="1" ry="1"/>
              </svg>
            </div>
            <div class="account-quick-content">
              <h3 class="account-quick-title">My Orders</h3>
              <p class="account-quick-description">View and track your orders</p>
              {orderCount !== null && orderCount > 0 && (
                <span class="account-quick-badge">{orderCount} order{orderCount !== 1 ? 's' : ''}</span>
              )}
            </div>
            <div class="account-quick-arrow">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 18l6-6-6-6"/>
              </svg>
            </div>
          </a>

          <!-- Addresses Card -->
          <a href="/account/addresses/" class="account-quick-card">
            <div class="account-quick-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
            </div>
            <div class="account-quick-content">
              <h3 class="account-quick-title">Addresses</h3>
              <p class="account-quick-description">Manage shipping addresses</p>
              {addressCount !== null && addressCount > 0 && (
                <span class="account-quick-badge">{addressCount} saved</span>
              )}
            </div>
            <div class="account-quick-arrow">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 18l6-6-6-6"/>
              </svg>
            </div>
          </a>

          <!-- Settings Card -->
          <a href="/account/settings/" class="account-quick-card">
            <div class="account-quick-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="3"/>
                <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/>
              </svg>
            </div>
            <div class="account-quick-content">
              <h3 class="account-quick-title">Settings</h3>
              <p class="account-quick-description">Update profile & password</p>
            </div>
            <div class="account-quick-arrow">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 18l6-6-6-6"/>
              </svg>
            </div>
          </a>
        </div>

        <!-- Recent Orders Section -->
        <div class="account-section">
          <div class="account-section-header">
            <h2 class="account-section-title">Recent Orders</h2>
            {orders && orders.length > 0 && (
              <a href="/account/orders/" class="account-section-link">
                View All Orders
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="w-4 h-4">
                  <path d="M9 18l6-6-6-6"/>
                </svg>
              </a>
            )}
          </div>

          {(!orders || orders.length === 0) ? (
            <div class="account-empty-state">
              <div class="account-empty-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/>
                  <rect x="8" y="2" width="8" height="4" rx="1" ry="1"/>
                  <line x1="9" y1="12" x2="15" y2="12"/>
                  <line x1="9" y1="16" x2="13" y2="16"/>
                </svg>
              </div>
              <h3 class="account-empty-title">No orders yet</h3>
              <p class="account-empty-description">When you place orders, they will appear here.</p>
              <a href="/shop/" class="btn-primary inline-flex items-center gap-2 mt-4">
                Start Shopping
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="w-4 h-4">
                  <path d="M5 12h14m-7-7l7 7-7 7"/>
                </svg>
              </a>
            </div>
          ) : (
            <div class="account-orders-list">
              {orders.map((order) => {
                const items = getOrderItems(order.id);
                return (
                  <a href={`/account/orders/${order.id}/`} class="account-order-card">
                    <div class="account-order-header">
                      <div class="account-order-info">
                        <span class="account-order-number">#{order.order_number}</span>
                        <span class="account-order-date">{formatDate(order.created_at)}</span>
                      </div>
                      <span class={`account-order-status ${getStatusColor(order.status)}`}>
                        {formatStatus(order.status)}
                      </span>
                    </div>

                    <div class="account-order-body">
                      <!-- Product Thumbnails -->
                      <div class="account-order-thumbnails">
                        {items.slice(0, 3).map((item, index) => (
                          <div class="account-order-thumb" style={`z-index: ${3 - index}`}>
                            {item.image ? (
                              <img
                                src={item.image}
                                alt={item.name}
                                class="w-full h-full object-cover"
                              />
                            ) : (
                              <div class="account-order-thumb-placeholder">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                  <rect x="3" y="3" width="18" height="18" rx="2"/>
                                  <circle cx="8.5" cy="8.5" r="1.5"/>
                                  <path d="M21 15l-5-5L5 21"/>
                                </svg>
                              </div>
                            )}
                          </div>
                        ))}
                        {items.length > 3 && (
                          <div class="account-order-thumb-more">
                            +{items.length - 3}
                          </div>
                        )}
                      </div>

                      <!-- Order Summary -->
                      <div class="account-order-summary">
                        <div class="account-order-items">
                          {items.length} item{items.length !== 1 ? 's' : ''}
                        </div>
                        <div class="account-order-total">
                          {formatCurrency(order.total)}
                        </div>
                      </div>
                    </div>

                    <div class="account-order-footer">
                      <span class="account-order-view">
                        View Details
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="w-4 h-4">
                          <path d="M9 18l6-6-6-6"/>
                        </svg>
                      </span>
                    </div>
                  </a>
                );
              })}
            </div>
          )}
        </div>

        <!-- Need Help Section -->
        <div class="account-help-card">
          <div class="account-help-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
              <line x1="12" y1="17" x2="12.01" y2="17"/>
            </svg>
          </div>
          <div class="account-help-content">
            <h3 class="account-help-title">Need Help?</h3>
            <p class="account-help-description">
              Our support team is here to help you with any questions about your orders or account.
            </p>
          </div>
          <div class="account-help-actions">
            <a href={siteSettings.contact.whatsappUrl} target="_blank" rel="noopener noreferrer" class="account-help-btn whatsapp">
              <svg viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp
            </a>
            <a href={`mailto:${siteSettings.contact.email}`} class="account-help-btn email">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="w-5 h-5">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
              Email Us
            </a>
          </div>
        </div>
      </AccountLayout>
    </div>
  </div>
</BaseLayout>
