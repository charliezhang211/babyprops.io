export const prerender = true;

import BaseLayout from '@/components/layout/BaseLayout.astro';
import Breadcrumb from '@/components/ui/Breadcrumb.astro';
import { siteSettings } from '@/config/site-settings';

const meta = {
  title: `Return Policy | ${siteSettings.siteName}`,
  description: 'Learn about our 30-day return policy for Dvotinst photography props. Easy returns and exchanges for your peace of mind.',
  image: `${siteSettings.siteUrl}/images/brand/og-image.jpg`,
};

const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Return & Exchange Policy', href: '/return-policy' },
];

const lastUpdated = 'February 3, 2026';
---

<BaseLayout {meta}>
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Breadcrumb -->
    <Breadcrumb items={breadcrumbItems} />

    <!-- Page Header -->
    <header class="text-center mb-12 mt-6">
      <h1 class="text-4xl md:text-5xl font-serif text-brand-dark mb-4">
        Return & Exchange Policy
      </h1>
      <p class="text-gray-600 text-sm">
        Last Updated: {lastUpdated}
      </p>
    </header>

    <!-- Content -->
    <div class="prose prose-lg max-w-none">
      <div class="bg-brand-light/30 border-l-4 border-brand p-6 rounded-r-lg mb-8">
        <p class="text-gray-700 leading-relaxed mb-2">
          <strong>30-Day Return Policy</strong>
        </p>
        <p class="text-gray-700 leading-relaxed mb-0">
          We want you to be completely satisfied with your purchase. If you're not happy,
          you can return most items within 30 days of delivery for a refund or exchange.
        </p>
      </div>

      <!-- Section 1: Return Eligibility -->
      <section class="mb-10">
        <h2 class="text-2xl font-serif text-brand-dark mb-4 border-b border-brand-light pb-2">
          1. Return Eligibility
        </h2>

        <h3 class="text-xl font-serif text-gray-800 mb-3 mt-6">
          1.1 Items Eligible for Return
        </h3>
        <p class="text-gray-700 leading-relaxed mb-4">
          To be eligible for a return, items must meet the following conditions:
        </p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li>Returned within <strong>30 days</strong> of delivery</li>
          <li>Unused and in original condition</li>
          <li>With all original tags and packaging</li>
          <li>Not damaged or altered by customer</li>
          <li>Accompanied by proof of purchase (order number)</li>
        </ul>

        <h3 class="text-xl font-serif text-gray-800 mb-3 mt-6">
          1.2 Items NOT Eligible for Return
        </h3>
        <div class="bg-amber-50 border-l-4 border-amber-400 p-4 rounded-r-lg mb-4">
          <p class="text-sm text-gray-700 mb-2">
            <strong>The following items cannot be returned:</strong>
          </p>
          <ul class="list-disc list-inside text-gray-700 space-y-1 text-sm ml-4">
            <li>Custom or personalized items (made-to-order with specific customizations)</li>
            <li>Items marked as "Final Sale"</li>
            <li>Items showing signs of use, wear, or washing</li>
            <li>Items damaged due to misuse or negligence</li>
            <li>Clearance items (unless defective)</li>
          </ul>
        </div>
      </section>

      <!-- Section 2: How to Return -->
      <section class="mb-10">
        <h2 class="text-2xl font-serif text-brand-dark mb-4 border-b border-brand-light pb-2">
          2. How to Initiate a Return
        </h2>

        <div class="bg-white border-2 border-brand-light rounded-lg p-6 mb-6">
          <h3 class="text-lg font-serif text-brand-dark mb-4">Return Process (3 Simple Steps)</h3>

          <div class="space-y-6">
            <!-- Step 1 -->
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 bg-brand text-white rounded-full flex items-center justify-center font-bold">
                1
              </div>
              <div class="flex-1">
                <h4 class="font-medium text-gray-900 mb-2">Contact Us</h4>
                <p class="text-gray-700 text-sm">
                  Email us at <a href={`mailto:${siteSettings.contact.email}`} class="text-brand hover:text-brand-dark underline">{siteSettings.contact.email}</a>
                  or message us on WhatsApp at <a href={`https://wa.me/${siteSettings.contact.whatsapp}`} class="text-brand hover:text-brand-dark underline" target="_blank" rel="noopener noreferrer">{siteSettings.contact.phone}</a>
                  with your order number and reason for return.
                </p>
              </div>
            </div>

            <!-- Step 2 -->
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 bg-brand text-white rounded-full flex items-center justify-center font-bold">
                2
              </div>
              <div class="flex-1">
                <h4 class="font-medium text-gray-900 mb-2">Receive Return Authorization</h4>
                <p class="text-gray-700 text-sm">
                  We will review your request and provide a Return Authorization (RA) number
                  along with return shipping instructions within 1-2 business days.
                </p>
              </div>
            </div>

            <!-- Step 3 -->
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 bg-brand text-white rounded-full flex items-center justify-center font-bold">
                3
              </div>
              <div class="flex-1">
                <h4 class="font-medium text-gray-900 mb-2">Ship the Item Back</h4>
                <p class="text-gray-700 text-sm">
                  Securely pack the item with the RA number clearly marked on the package.
                  Ship to the address provided. We recommend using a trackable shipping method.
                </p>
              </div>
            </div>
          </div>
        </div>

        <p class="text-gray-700 leading-relaxed">
          <strong>Important:</strong> Do not ship returns without an RA number. Unauthorized returns may not be processed.
        </p>
      </section>

      <!-- Section 3: Return Shipping -->
      <section class="mb-10">
        <h2 class="text-2xl font-serif text-brand-dark mb-4 border-b border-brand-light pb-2">
          3. Return Shipping Costs
        </h2>

        <h3 class="text-xl font-serif text-gray-800 mb-3 mt-6">
          3.1 Customer Responsibility
        </h3>
        <p class="text-gray-700 leading-relaxed mb-4">
          For standard returns (change of mind, wrong size, etc.):
        </p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li>Customer is responsible for return shipping costs</li>
          <li>We recommend using a trackable shipping method</li>
          <li>We are not responsible for lost return packages</li>
        </ul>

        <h3 class="text-xl font-serif text-gray-800 mb-3 mt-6">
          3.2 Our Responsibility
        </h3>
        <p class="text-gray-700 leading-relaxed mb-4">
          We will cover return shipping costs if:
        </p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li>Item received is defective or damaged</li>
          <li>Wrong item was shipped</li>
          <li>Item significantly differs from description</li>
        </ul>
        <p class="text-gray-700 leading-relaxed mt-4">
          In these cases, we will provide a prepaid return label or reimburse your return shipping costs.
        </p>
      </section>

      <!-- Section 4: Refunds -->
      <section class="mb-10">
        <h2 class="text-2xl font-serif text-brand-dark mb-4 border-b border-brand-light pb-2">
          4. Refunds
        </h2>

        <h3 class="text-xl font-serif text-gray-800 mb-3 mt-6">
          4.1 Refund Processing
        </h3>
        <p class="text-gray-700 leading-relaxed mb-4">
          Once we receive and inspect your return:
        </p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li>We will send you an email confirmation</li>
          <li>Refunds are processed within 3-5 business days</li>
          <li>Refunds are issued to your original payment method (PayPal account)</li>
          <li>It may take 5-10 business days for the refund to appear in your account</li>
        </ul>

        <h3 class="text-xl font-serif text-gray-800 mb-3 mt-6">
          4.2 Refund Amount
        </h3>
        <p class="text-gray-700 leading-relaxed mb-4">
          Your refund will include:
        </p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li><strong>Item cost:</strong> Full purchase price (excluding sale discount if Final Sale)</li>
          <li><strong>Original shipping:</strong> Only refunded if the return is due to our error</li>
        </ul>
        <p class="text-gray-700 leading-relaxed mt-4">
          <strong>Note:</strong> Original shipping costs are non-refundable for standard returns.
          Return shipping costs are deducted from your refund unless we made an error.
        </p>

        <h3 class="text-xl font-serif text-gray-800 mb-3 mt-6">
          4.3 Partial Refunds
        </h3>
        <p class="text-gray-700 leading-relaxed mb-4">
          Partial refunds may be issued if:
        </p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li>Item shows signs of use or wear</li>
          <li>Item is missing parts or accessories</li>
          <li>Item is returned more than 30 days after delivery</li>
          <li>Original packaging is damaged or missing</li>
        </ul>
      </section>

      <!-- Section 5: Exchanges -->
      <section class="mb-10">
        <h2 class="text-2xl font-serif text-brand-dark mb-4 border-b border-brand-light pb-2">
          5. Exchanges
        </h2>

        <h3 class="text-xl font-serif text-gray-800 mb-3 mt-6">
          5.1 Exchange Process
        </h3>
        <p class="text-gray-700 leading-relaxed mb-4">
          We accept exchanges for:
        </p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li>Different size (if applicable)</li>
          <li>Different color variant</li>
          <li>Replacement due to defect</li>
        </ul>
        <p class="text-gray-700 leading-relaxed mt-4">
          To exchange an item:
        </p>
        <ol class="list-decimal list-inside text-gray-700 space-y-2 ml-4">
          <li>Contact us with your order number and exchange request</li>
          <li>We will check availability of the desired item</li>
          <li>Follow the same return process as above</li>
          <li>We will ship the new item once we receive your return</li>
        </ol>

        <h3 class="text-xl font-serif text-gray-800 mb-3 mt-6">
          5.2 Exchange Shipping Costs
        </h3>
        <p class="text-gray-700 leading-relaxed">
          For exchanges due to size/color preference, customer covers return shipping.
          For exchanges due to defects or errors, we cover all shipping costs.
        </p>
      </section>

      <!-- Section 6: Damaged or Defective Items -->
      <section class="mb-10">
        <h2 class="text-2xl font-serif text-brand-dark mb-4 border-b border-brand-light pb-2">
          6. Damaged or Defective Items
        </h2>

        <h3 class="text-xl font-serif text-gray-800 mb-3 mt-6">
          6.1 Reporting Damage
        </h3>
        <p class="text-gray-700 leading-relaxed mb-4">
          If you receive a damaged or defective item:
        </p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li>Contact us within <strong>7 days</strong> of delivery</li>
          <li>Provide photos of the damage/defect</li>
          <li>Include your order number</li>
        </ul>

        <h3 class="text-xl font-serif text-gray-800 mb-3 mt-6">
          6.2 Resolution Options
        </h3>
        <p class="text-gray-700 leading-relaxed mb-4">
          We will offer one of the following:
        </p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li><strong>Replacement:</strong> We'll send a new item at no cost</li>
          <li><strong>Full Refund:</strong> Including original shipping costs</li>
          <li><strong>Partial Refund:</strong> If you wish to keep the item with a discount</li>
        </ul>
        <p class="text-gray-700 leading-relaxed mt-4">
          All return shipping costs will be covered by us via prepaid label.
        </p>
      </section>

      <!-- Section 7: International Returns -->
      <section class="mb-10">
        <h2 class="text-2xl font-serif text-brand-dark mb-4 border-b border-brand-light pb-2">
          7. International Returns
        </h2>
        <p class="text-gray-700 leading-relaxed mb-4">
          For international orders:
        </p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li>Same 30-day return policy applies</li>
          <li>Customer is responsible for return shipping costs (unless our error)</li>
          <li>We recommend using a trackable international shipping method</li>
          <li>Customs fees are non-refundable</li>
          <li>Mark the package as "Return" to avoid additional customs charges</li>
        </ul>
        <p class="text-gray-700 leading-relaxed mt-4">
          Contact us before returning to get the correct return address and customs declaration assistance.
        </p>
      </section>

      <!-- Section 8: Warranty -->
      <section class="mb-10">
        <h2 class="text-2xl font-serif text-brand-dark mb-4 border-b border-brand-light pb-2">
          8. Warranty
        </h2>
        <p class="text-gray-700 leading-relaxed mb-4">
          We stand behind the quality of our products:
        </p>
        <ul class="list-disc list-inside text-gray-700 space-y-2 ml-4">
          <li>All products are inspected before shipping</li>
          <li>Handmade items may have minor natural variations (not defects)</li>
          <li>Manufacturing defects are covered beyond the 30-day return period</li>
          <li>Contact us if you discover a defect after 30 days - we'll work with you</li>
        </ul>
      </section>

      <!-- Contact Section -->
      <section class="bg-brand-light/50 p-8 rounded-lg border border-brand-light mt-12">
        <h2 class="text-2xl font-serif text-brand-dark mb-4">
          Need Help with a Return?
        </h2>
        <p class="text-gray-700 leading-relaxed mb-4">
          Our customer service team is here to make your return as easy as possible.
          Contact us and we'll guide you through the process.
        </p>
        <div class="space-y-2 text-gray-700">
          <p>
            <strong>Email:</strong>
            <a href={`mailto:${siteSettings.contact.email}`} class="text-brand hover:text-brand-dark underline ml-2">
              {siteSettings.contact.email}
            </a>
          </p>
          <p>
            <strong>WhatsApp (Fastest):</strong>
            <a
              href={`https://wa.me/${siteSettings.contact.whatsapp}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-brand hover:text-brand-dark underline ml-2"
            >
              {siteSettings.contact.phone}
            </a>
          </p>
          <p class="text-sm text-gray-600 mt-4">
            <strong>Tip:</strong> Include your order number in your message for faster service!
          </p>
        </div>
      </section>

      <!-- Satisfaction Guarantee -->
      <div class="bg-brand-accent/10 border border-brand-accent rounded-lg p-6 mt-8 text-center">
        <h3 class="text-xl font-serif text-brand-dark mb-3">
          Our Promise to You
        </h3>
        <p class="text-gray-700 leading-relaxed max-w-2xl mx-auto">
          We've been serving professional photographers for <strong>8 years</strong> because
          we care about your satisfaction. If something isn't right, we'll make it right.
          Your trust means everything to us.
        </p>
      </div>
    </div>

    <!-- Back to Home -->
    <div class="text-center mt-12">
      <a
        href="/"
        class="inline-block bg-brand text-white px-8 py-3 rounded-full hover:bg-brand-dark transition-colors font-medium"
      >
        Back to Home
      </a>
    </div>
  </main>
</BaseLayout>

<style>
  .prose ul,
  .prose ol {
    @apply mb-4;
  }

  .prose a {
    @apply no-underline;
  }
</style>
