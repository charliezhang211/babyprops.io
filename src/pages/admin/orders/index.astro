---
/**
 * Admin Orders Management Page
 * Uses OrdersManager React component
 */
import AdminLayout from "@/components/admin/AdminLayout.astro";
import OrdersManager from "@/components/admin/OrdersManager";
import { checkAdmin } from "@/lib/supabase";

const { isAdmin, user } = await checkAdmin(Astro.cookies);
if (!isAdmin) return Astro.redirect('/auth/login?redirect=/admin/orders/');
---

<AdminLayout title="Orders Management" currentPage="orders" userEmail={user?.email}>
    <OrdersManager client:load />
</AdminLayout>
