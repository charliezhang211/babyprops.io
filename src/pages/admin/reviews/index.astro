---
/**
 * Admin Reviews Management Page
 * Uses ReviewsManager React component
 */
import AdminLayout from "@/components/admin/AdminLayout.astro";
import ReviewsManager from "@/components/admin/ReviewsManager";
import { checkAdmin } from "@/lib/supabase";

const { isAdmin, user } = await checkAdmin(Astro.cookies);
if (!isAdmin) return Astro.redirect('/auth/login?redirect=/admin/reviews/');
---

<AdminLayout title="Reviews Management" currentPage="reviews" userEmail={user?.email}>
    <ReviewsManager client:load />
</AdminLayout>
