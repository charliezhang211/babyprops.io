---
/**
 * Forgot Password Page - Auth 忘记密码页面
 *
 * 功能:
 * - 密码重置请求表单
 * - 品牌配色 (Morandic Palette)
 * - 响应式设计
 *
 * @see CLAUDE.md Section 7B.1
 */

export const prerender = true;

import BaseLayout from '@/components/layout/BaseLayout.astro';
import ForgotPasswordForm from '@/components/auth/ForgotPasswordForm';
import { siteSettings } from '@/config/site-settings';

// SEO 元数据
const meta = {
  title: `Reset Password | ${siteSettings.siteName}`,
  description: `Reset your ${siteSettings.siteName} account password. We'll send you a secure link to create a new password.`,
  noindex: true,
};
---

<BaseLayout meta={meta} bodyClass="bg-brand-light">
  <main class="auth-page">
    <div class="auth-container">
      <!-- Logo -->
      <div class="auth-logo">
        <a href="/" aria-label={siteSettings.siteName}>
          <span class="auth-logo-text">{siteSettings.siteName}</span>
        </a>
      </div>

      <!-- Auth Card -->
      <div class="auth-card">
        <!-- Icon -->
        <div class="flex justify-center mb-6">
          <div class="w-16 h-16 rounded-full bg-brand-light flex items-center justify-center">
            <svg class="w-8 h-8 text-brand" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="4"/>
              <path d="M16 8v5a3 3 0 0 0 6 0v-1a10 10 0 1 0-3.92 7.94"/>
            </svg>
          </div>
        </div>

        <h1 class="auth-title">Forgot Password?</h1>
        <p class="auth-subtitle">No worries, we'll help you reset it</p>

        <!-- Forgot Password Form (React Island) -->
        <ForgotPasswordForm client:load />

        <!-- Back Link -->
        <div class="mt-6 text-center">
          <a href="/auth/login/" class="inline-flex items-center gap-2 text-sm text-gray-500 hover:text-brand transition-colors">
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="19" y1="12" x2="5" y2="12"/>
              <polyline points="12 19 5 12 12 5"/>
            </svg>
            Back to Sign In
          </a>
        </div>
      </div>

      <!-- Additional Links -->
      <div class="mt-6 text-center text-sm text-gray-500">
        <p>
          Need help? <a href="/contact/" class="text-brand hover:text-brand-dark transition-colors">Contact Support</a>
        </p>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  /* Override BaseLayout header/footer for auth pages */
  :global(header),
  :global(footer),
  :global(.fixed.bottom-6.right-6) {
    display: none;
  }
</style>
