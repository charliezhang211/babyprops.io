---
/**
 * Reset Password Page - Auth 重置密码页面
 *
 * 功能:
 * - 设置新密码表单
 * - 品牌配色 (Morandic Palette)
 * - 响应式设计
 *
 * @see CLAUDE.md Section 7B.1
 */

export const prerender = true;

import BaseLayout from '@/components/layout/BaseLayout.astro';
import ResetPasswordForm from '@/components/auth/ResetPasswordForm';
import { siteSettings } from '@/config/site-settings';

// SEO 元数据
const meta = {
  title: `Set New Password | ${siteSettings.siteName}`,
  description: `Create a new password for your ${siteSettings.siteName} account.`,
  noindex: true,
};
---

<BaseLayout meta={meta} bodyClass="bg-brand-light">
  <main class="auth-page">
    <div class="auth-container">
      <!-- Logo -->
      <div class="auth-logo">
        <a href="/" aria-label={siteSettings.siteName}>
          <span class="auth-logo-text">{siteSettings.siteName}</span>
        </a>
      </div>

      <!-- Auth Card -->
      <div class="auth-card">
        <!-- Icon -->
        <div class="flex justify-center mb-6">
          <div class="w-16 h-16 rounded-full bg-brand-light flex items-center justify-center">
            <svg class="w-8 h-8 text-brand" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
              <path d="M7 11V7a5 5 0 0 1 9.9-1"/>
            </svg>
          </div>
        </div>

        <h1 class="auth-title">Set New Password</h1>
        <p class="auth-subtitle">Create a secure password for your account</p>

        <!-- Reset Password Form (React Island) -->
        <ResetPasswordForm client:load />

        <!-- Password Tips -->
        <div class="mt-6 p-4 bg-brand-light/50 rounded-lg">
          <h3 class="text-sm font-medium text-brand-dark mb-2">Password Tips</h3>
          <ul class="text-xs text-gray-500 space-y-1">
            <li class="flex items-center gap-2">
              <svg class="w-3 h-3 text-brand-accent" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              At least 8 characters long
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-3 h-3 text-brand-accent" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              Mix of uppercase and lowercase letters
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-3 h-3 text-brand-accent" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"/>
              </svg>
              Include at least one number
            </li>
          </ul>
        </div>
      </div>

      <!-- Additional Links -->
      <div class="mt-6 text-center text-sm text-gray-500">
        <p>
          Need help? <a href="/contact/" class="text-brand hover:text-brand-dark transition-colors">Contact Support</a>
        </p>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  /* Override BaseLayout header/footer for auth pages */
  :global(header),
  :global(footer),
  :global(.fixed.bottom-6.right-6) {
    display: none;
  }
</style>
