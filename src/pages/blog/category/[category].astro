---
/**
 * Blog Category Page - 博客分类页
 *
 * 功能:
 * - 按分类筛选博客文章
 * - 分类侧边栏菜单
 * - 文章卡片网格
 *
 * @see TASKS-BLOG.md Task-B.5
 */

import { getCollection } from "astro:content";
import BaseLayout from "@/components/layout/BaseLayout.astro";
import BlogCard from "@/components/blog/BlogCard.astro";
import { siteSettings } from "@/config/site-settings";

// Category labels for display
const categoryLabels: Record<string, string> = {
    "photography-tips": "Photography Tips",
    "prop-guides": "Prop Guides",
    "styling-inspiration": "Styling Inspiration",
    "industry-news": "Industry News",
    "behind-the-scenes": "Behind the Scenes",
};

// Generate static paths for all categories
export async function getStaticPaths() {
    const categories = Object.keys({
        "photography-tips": "Photography Tips",
        "prop-guides": "Prop Guides",
        "styling-inspiration": "Styling Inspiration",
        "industry-news": "Industry News",
        "behind-the-scenes": "Behind the Scenes",
    });

    return categories.map((category) => ({
        params: { category },
    }));
}

const { category } = Astro.params;
const categoryLabel = categoryLabels[category] || category;

// Get posts for this category
const allPosts = await getCollection("blog");
const posts = allPosts
    .filter((post) => post.data.category === category)
    .sort(
        (a, b) =>
            b.data.published_date.getTime() - a.data.published_date.getTime(),
    );

// Count posts per category for sidebar
const categoryCounts = allPosts.reduce(
    (acc, post) => {
        acc[post.data.category] = (acc[post.data.category] || 0) + 1;
        return acc;
    },
    {} as Record<string, number>,
);

// SEO Meta
const meta = {
    title: `${categoryLabel} | Blog | Dvotinst`,
    description: `Browse our ${categoryLabel.toLowerCase()} articles. Tips, guides, and insights for newborn photography professionals.`,
    url: `${siteSettings.siteUrl}/blog/category/${category}`,
    type: "website" as const,
};
---

<BaseLayout meta={meta}>
    <main class="min-h-screen bg-gradient-to-b from-brand-light/30 to-white">
        <!-- Breadcrumb -->
        <div class="container mx-auto px-4 py-4">
            <nav class="text-sm text-brand-dark/60" aria-label="Breadcrumb">
                <ol class="flex items-center gap-2 flex-wrap">
                    <li>
                        <a href="/" class="hover:text-brand transition-colors"
                            >Home</a>
                    </li>
                    <li class="text-brand-dark/40">/</li>
                    <li>
                        <a
                            href="/blog"
                            class="hover:text-brand transition-colors">Blog</a>
                    </li>
                    <li class="text-brand-dark/40">/</li>
                    <li class="text-brand-dark">{categoryLabel}</li>
                </ol>
            </nav>
        </div>

        <!-- Page Header -->
        <div class="container mx-auto px-4 py-8 text-center">
            <span
                class="inline-block bg-brand/10 text-brand px-4 py-1.5 rounded-full text-sm font-medium mb-4"
            >
                Category
            </span>
            <h1
                class="text-4xl md:text-5xl font-serif font-bold text-brand-dark mb-4"
            >
                {categoryLabel}
            </h1>
            <p class="text-lg text-brand-dark/70 max-w-2xl mx-auto">
                {posts.length}
                {posts.length === 1 ? "article" : "articles"} in this category
            </p>
        </div>

        <!-- Content Grid -->
        <div class="container mx-auto px-4 pb-16">
            <div class="flex flex-col lg:flex-row gap-8 lg:gap-12">
                <!-- Sidebar - Categories -->
                <aside class="lg:w-64 flex-shrink-0">
                    <!-- Mobile: Dropdown -->
                    <div class="lg:hidden mb-6">
                        <select
                            id="category-select"
                            class="w-full bg-white border border-brand/20 rounded-xl px-4 py-3 text-brand-dark focus:outline-none focus:ring-2 focus:ring-brand/30"
                            onchange="window.location.href = this.value"
                        >
                            <option value="/blog"
                                >All Categories ({allPosts.length})</option
                            >
                            {
                                Object.entries(categoryLabels).map(
                                    ([slug, label]) => (
                                        <option
                                            value={`/blog/category/${slug}`}
                                            selected={slug === category}
                                        >
                                            {label} ({categoryCounts[slug] || 0}
                                            )
                                        </option>
                                    ),
                                )
                            }
                        </select>
                    </div>

                    <!-- Desktop: Sidebar Menu -->
                    <div class="hidden lg:block sticky top-24">
                        <div
                            class="bg-white rounded-2xl p-6 shadow-sm border border-brand/10"
                        >
                            <h3
                                class="text-lg font-serif font-semibold text-brand-dark mb-4"
                            >
                                Categories
                            </h3>
                            <ul class="space-y-2">
                                <li>
                                    <a
                                        href="/blog"
                                        class="flex items-center justify-between px-3 py-2 rounded-lg hover:bg-brand-light/50 text-brand-dark/70 hover:text-brand-dark transition-colors"
                                    >
                                        <span>All</span>
                                        <span class="text-sm text-brand-dark/50"
                                            >{allPosts.length}</span
                                        >
                                    </a>
                                </li>
                                {
                                    Object.entries(categoryLabels).map(
                                        ([slug, label]) => (
                                            <li>
                                                <a
                                                    href={`/blog/category/${slug}`}
                                                    class={`flex items-center justify-between px-3 py-2 rounded-lg transition-colors ${
                                                        slug === category
                                                            ? "bg-brand/10 text-brand font-medium"
                                                            : "hover:bg-brand-light/50 text-brand-dark/70 hover:text-brand-dark"
                                                    }`}
                                                >
                                                    <span>{label}</span>
                                                    <span
                                                        class={`text-sm ${slug === category ? "bg-brand/20 px-2 py-0.5 rounded-full" : "text-brand-dark/50"}`}
                                                    >
                                                        {categoryCounts[slug] ||
                                                            0}
                                                    </span>
                                                </a>
                                            </li>
                                        ),
                                    )
                                }
                            </ul>
                        </div>
                    </div>
                </aside>

                <!-- Posts Grid -->
                <div class="flex-1">
                    {
                        posts.length === 0 ? (
                            <div class="text-center py-16">
                                <p class="text-brand-dark/60 text-lg mb-4">
                                    No articles in this category yet.
                                </p>
                                <a
                                    href="/blog"
                                    class="text-brand hover:text-brand-dark underline"
                                >
                                    ← View all articles
                                </a>
                            </div>
                        ) : (
                            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
                                {posts.map((post) => (
                                    <BlogCard
                                        title={post.data.title}
                                        slug={post.data.slug}
                                        excerpt={post.data.excerpt}
                                        featuredImage={post.data.featured_image}
                                        category={post.data.category}
                                        publishedDate={post.data.published_date}
                                        readingTime={post.data.reading_time}
                                    />
                                ))}
                            </div>
                        )
                    }
                </div>
            </div>
        </div>
    </main>
</BaseLayout>
